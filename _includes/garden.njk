{% extends "base.njk" %}
{% block content %}
<div class="stack garden">
  <div class="article-head">
    <h1 class="title large">{{ title }}</h1>
    <div class="horizontal">
    {% include "growth-emoji.njk" %} 
    <p class="text-gray-300">{% humanDate date %}</p>
    </div>
  </div>

  <hr class="hairline" />

  <div class="content stack-small text-gray-600 text-lighter">
    {{ content | safe }}
  </div>
</div>
{% endblock %}
