<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="/assets/favicon.png">
    <link rel="stylesheet" href="/assets/main.css">
    <script async defer data-domain="felipesere.com" src="https://stats.felipesere.com/js/plausible.js"></script>
    <title>Felipe Seré</title>
  </head>
  <script>
    function matchDarkMode(setting) {
      if(setting) {
          document.body.classList.add('dark-mode')
      } else {
          document.body.classList.remove('dark-mode')
      }
    }

    document.addEventListener('DOMContentLoaded', function () {
      const checkbox = document.querySelector('#dark-mode');
      checkbox.checked = localStorage.getItem('darkMode') === 'true';
      matchDarkMode(checkbox.checked)

      checkbox.addEventListener('change', function (event) {
        const checked = event.currentTarget.checked
        localStorage.setItem('darkMode', checked);
        matchDarkMode(checked)
      });
    });
  </script>
  <body>
     <div class="main center">
         <label class="dark-mode-label" for="dark-mode">Dark mode</label>
        <input id="dark-mode" class="visually-hidden" type="checkbox">
        <nav class="horizontal space-between text-gray-300 text-size">
            <a href="/">Home</a>
            <a href="/blogs">Blogs</a>
            <a href="/about">About</a>
            <a href="/design">Design</a>
        </nav>

        <main>
            {% block content %}{% endblock %}
        </main>

        <footer>
           <p class="text-gray-200 text-center">Felipe Seré © 2020<p>
        </footer>
     </div>
  </body>
</html>
